<section>
    <div class="container">
        <div class="row">
            <a href="/admin/addproducts" class="btn btn-succes">Add product</a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">name</th>
                        <th scope="col">category</th>
                        <th scope="col">Description</th>
                        <th scope="col">image</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <th scope="row">1</th>
                        <td>{{this.name}}</td>
                        <td>{{this.Category}}</td>
                        <td>{{this.Description}}</td>
                       
                    <td><img style="width: 50px; height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>


                 <td>
                     <a href="/admin/product-delete/{{this._id}}" class="btn btn-danger"  onclick=" return confirm('Are you sure {{this.name}}?')">Delete</a>
                     <a href="/admin/product-edit/{{this._id}}" class="btn btn-primary">Edit</a>
                  </td>   


              
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</section>